    <typeAliases>
        <package name="cn.et.yitao.user.bean"/>
        <package name="cn.et.yitao.book.bean"/>
        <package name="cn.et.yitao.cart.bean"/>
        <package name="cn.et.yitao.pay.bean"/>
        <package name="cn.et.yitao.home.bean"/>
        <package name="cn.et.yitao.browse.bean"/>
        <package name="cn.et.yitao.content.bean"/>
