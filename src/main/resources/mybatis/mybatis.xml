        <mapper resource="mybatis/mapper/browser/UserCookiesMapper.xml"/>
        <mapper resource="mybatis/mapper/pay/OrderMapper.xml"/>
        <mapper resource="mybatis/mapper/pay/OrderitemMapper.xml"/>
        <mapper resource="mybatis/mapper/browser/UserCookiesMapper.xml"/>
        <mapper resource="mybatis/mapper/cart/UserCartMapper.xml"/>
