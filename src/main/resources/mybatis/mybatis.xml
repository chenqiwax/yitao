    <mappers>
        <mapper resource="mybatis/mapper/user/UserMapper.xml"/>
        <mapper resource="mybatis/mapper/user/SecurityCodeMapper.xml"/>
        <mapper resource="mybatis/mapper/user/UserCollectionMapper.xml"/>
        <mapper resource="mybatis/mapper/user/UserAddressMapper.xml"/>
        <mapper resource="mybatis/mapper/user/UserMessageMapper.xml"/>
        <mapper resource="mybatis/mapper/user/RoleMapper.xml"/>
        <mapper resource="mybatis/mapper/user/RolePermission.xml"/>
        <mapper resource="mybatis/mapper/home/HomeMapper.xml"/>
        <mapper resource="mybatis/mapper/book/BookCategoryMapper.xml"/>
        <mapper resource="mybatis/mapper/book/BookCommentMapper.xml"/>
